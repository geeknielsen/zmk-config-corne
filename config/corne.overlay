/*
 * corne.overlay
 * Hardware configuration for Corne RGB + Nice!Nano v2
 */

/ {
    leds: ws2812 {
        compatible = "worldsemi,ws2812";
        label = "WS2812";
        chain-length = <54>;                   // ðŸ”§ Skift til samlet antal LEDâ€™er (per-key + underglow)
        color-mapping = <GRB>;                 // De fleste Corne boards bruger GRB
        data-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>; // D6 pÃ¥ Nice!Nano (GPIO0.06)
        status = "okay";
    };

    chosen {
        zmk,underglow = &leds;
    };
};

/* -----------------------------------------------------------------------------
 * LED-indikatorer
 * ----------------------------------------------------------------------------- */

&leds {
    zmk,led-indicators {
        compatible = "zmk,led-indicators";

        /* Caps Lock indikator â€“ LED 0 */
        caps_lock {
            led-index = <0>;
            color = <255 0 0>;   // RÃ¸d
        };

        /* Layer 1 indikator â€“ LED 1 */
        layer_lower {
            layer = <1>;
            led-index = <1>;
            color = <0 0 255>;   // BlÃ¥
        };

        /* Layer 2 indikator â€“ LED 2 */
        layer_raise {
            layer = <2>;
            led-index = <2>;
            color = <0 255 0>;   // GrÃ¸n
        };
    };
};
