/*
 * corne.overlay
 * Extends existing Corne LED strip configuration for Nice!Nano v2
 */

/ {
    chosen {
        zmk,underglow = &led_strip;
    };
};

/* Override LED strip configuration */
&led_strip {
    compatible = "worldsemi,ws2812";
    chain-length = <54>;          // samlet antal LED’er
    color-mapping = <GRB>;
    data-gpios = <&gpio0 6 0>;    // D6 på Nice!Nano v2
    status = "okay";
};

/* Optional indicators */
&led_strip {
    zmk,led-indicators {
        compatible = "zmk,led-indicators";

        caps_lock {
            led-index = <0>;
            color = <255 0 0>;
        };

        layer_lower {
            layer = <1>;
            led-index = <1>;
            color = <0 0 255>;
        };

        layer_raise {
            layer = <2>;
            led-index = <2>;
            color = <0 255 0>;
        };
    };
};
