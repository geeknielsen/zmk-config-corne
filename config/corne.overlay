#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
    ws2812: ws2812 {
        compatible = "worldsemi,ws2812";
        label = "WS2812";
        chain-length = <54>;
        color-mapping = <GRB>;
        data-gpios = <&p0 6 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };

    chosen {
        zmk,underglow = &ws2812;
    };
};
