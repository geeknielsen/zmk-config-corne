/*
 * Corne overlay for Nice!Nano v2 + WS2812 RGB LEDs
 */

 / {
    leds: ws2812 {
        compatible = "worldsemi,ws2812";
        label = "WS2812";
        chain-length = <54>;          // üîß Samlet antal LED'er (per-key + underglow)
        color-mapping = <GRB>;        // De fleste Corne boards bruger GRB
        gpios = <&gpio0 6 0>;         // Pin D6 p√• Nice!Nano v2, 0 = aktive h√∏j
        status = "okay";
    };

    chosen {
        zmk,underglow = &leds;
    };
};

/* -------------------------------------------------------------------------- */
/* Optional LED indicators for layers / caps lock                             */
/* -------------------------------------------------------------------------- */

&leds {
    zmk,led-indicators {
        compatible = "zmk,led-indicators";

        caps_lock {
            led-index = <0>;
            color = <255 0 0>;   // R√∏d
        };

        layer_lower {
            layer = <1>;
            led-index = <1>;
            color = <0 0 255>;   // Bl√•
        };

        layer_raise {
            layer = <2>;
            led-index = <2>;
            color = <0 255 0>;   // Gr√∏n
        };
    };
};
